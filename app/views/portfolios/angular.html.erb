<h1>Angular Portfolio Items</h1>

<%= link_to  "Create New Item", new_portfolio_path %>

<% @angular_portfolio.each do |pi| %>
  <p><%= link_to pi.title, portfolio_show_path(pi) %></p>
  <p><%= pi.subtitle %></p>
  <p><%= pi.body %></p>
  <%= image_tag pi.thumb_image if !pi.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(pi) %>
  <%= link_to 'Destroy', portfolio_path(pi), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>